<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="cebujeepney.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:cebujeepney.Views"
       Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Home" Icon="homelogo.png" ContentTemplate="{DataTemplate views:CommuterMV}" />
        <ShellContent Title="Admin" Icon="homelogo.png" ContentTemplate="{DataTemplate views:AdminMV}" />
        <ShellContent Title="My Account" Icon="profilelogo.png" ContentTemplate="{DataTemplate views:ProfileView}" />
    </TabBar>

    <ShellContent  ContentTemplate="{DataTemplate views:RegisterView}" Route="RegisterView" />
    <ShellContent  ContentTemplate="{DataTemplate views:ChangePasswordView}" Route="ChangePasswordView" />
</Shell>
