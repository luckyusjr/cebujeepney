<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cebujeepney.Views.LoginView"
             BackgroundColor="#F5F7FF">

    <ContentPage.Resources>
        <!-- Colors -->
        <Color x:Key="PrimaryBlue">#2E43D9</Color>
        <Color x:Key="PrimaryBlueDark">#2236C9</Color>
        <Color x:Key="HeaderBlueStart">#73A7FF</Color>
        <Color x:Key="HeaderBlueEnd">#2E43D9</Color>
        <Color x:Key="DividerBlue">#C9D3FF</Color>
        <Color x:Key="FieldText">#1A1A1A</Color>
        <Color x:Key="FieldPlaceholder">#4B5563</Color>

        <!-- Buttons -->
        <Style TargetType="Button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBlue}" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="CornerRadius" Value="24" />
            <Setter Property="HeightRequest" Value="52" />
        </Style>

        <!-- Pill container -->
        <Style x:Key="PillField" TargetType="Border">
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="24" />
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="20,14" />
            <Setter Property="HeightRequest" Value="54" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="#22000000" Radius="6" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Entry: bigger, darker, and NO Material underline -->
        <Style x:Key="LargeEntry" TargetType="Entry">
            <Setter Property="Visual" Value="Default" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextColor" Value="{StaticResource FieldText}" />
            <Setter Property="PlaceholderColor" Value="{StaticResource FieldPlaceholder}" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
            <Setter Property="HorizontalTextAlignment" Value="Start" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        <!-- Top gradient header -->
        <Grid HeightRequest="240">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource PrimaryBlueDark}" Offset="0" />
                    <GradientStop Color="{StaticResource HeaderBlueStart}" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <VerticalStackLayout Padding="24,10,24,0" Spacing="2">
                <Image Source="cebujeeplogo.svg"
                       HeightRequest="150"
                       HorizontalOptions="Center" />
                <Label Text="Welcome, Cebu Jeepney Commuter!"
                       HorizontalTextAlignment="Center"
                       TextColor="White"
                       FontFamily="Arial"
                       FontAttributes="Bold"
                       FontSize="20"
                       Margin="0,2,0,0"/>
            </VerticalStackLayout>
        </Grid>

        <!-- White rounded card that overlaps header -->
        <Border Grid.Row="1"
                Margin="0,-28,0,0"
                BackgroundColor="White">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28,28,0,0"/>
            </Border.StrokeShape>

            <ScrollView>
                <VerticalStackLayout Padding="24,24,24,32" Spacing="16">

                    <!-- Username -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Email"
                               FontSize="19"
                               FontFamily="Arial"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"
                               Margin="4,0,0,0"/>
                        <Entry x:Name="entryUser"
                               Text="{Binding Email}"
                               FontSize="18"
                               TextColor="{StaticResource FieldText}"
                               PlaceholderColor="{StaticResource FieldPlaceholder}"
                               HeightRequest="50" />
                    </VerticalStackLayout>

                    <!-- Password -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Password"
                               FontSize="19"
                               FontFamily="Arial"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"
                               Margin="4,0,0,0"/>
                        <Entry x:Name="entryPass"
                               Text="{Binding Password}"
                               IsPassword="True"
                               FontSize="18"
                               TextColor="{StaticResource FieldText}"
                               PlaceholderColor="{StaticResource FieldPlaceholder}"
                               HeightRequest="50" />
                    </VerticalStackLayout>

                    <!-- Log In button -->
                    <Button Text="Log In"
                            FontSize="22"
                            Margin="0,8,0,4"
                            BackgroundColor="{StaticResource PrimaryBlueDark}"
                            Command="{Binding LoginCommand}"/>

                    <!-- Divider with "New here?" -->
                    <Grid ColumnDefinitions="*,Auto,*" Margin="0,10,0,4" VerticalOptions="Center">
                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource DividerBlue}" VerticalOptions="Center"/>
                        <Label Grid.Column="1" Text="New here?" TextColor="{StaticResource PrimaryBlueDark}" Margin="12,0" FontSize="20" FontAttributes="Bold"/>
                        <BoxView Grid.Column="2" HeightRequest="1" BackgroundColor="{StaticResource DividerBlue}" VerticalOptions="Center"/>
                    </Grid>

                    <!-- Create account button -->
                    <Button Text="Create your Account" 
                            FontSize="22"
                            Command="{Binding GoToRegisterCommand}"/>

                    <!-- Quote -->
                    <Label Text="Make Jeepney Rides easy to navigate."
                           Margin="0,16,0,0"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="{StaticResource PrimaryBlueDark}"
                           HorizontalTextAlignment="Center" />

                    <BoxView HeightRequest="8" Opacity="0"/>
                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>